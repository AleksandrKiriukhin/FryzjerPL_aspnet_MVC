@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ASP.NET_project.ViewModel.ReservationViewModel

@{
    ViewData["Title"] = "Dodaj rezerwację";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header bg-purple text-white">
                <h4 class="mb-0">@Localizer["Dodaj nową rezerwację"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label asp-for="id_client" class="control-label">@Localizer["ID klienta"]</label>
                        <input asp-for="id_client" class="form-control" />
                        <span asp-validation-for="id_client" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="id_worker" class="control-label">@Localizer["ID pracownika"]</label>
                        <input asp-for="id_worker" class="form-control" />
                        <span asp-validation-for="id_worker" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="id_service" class="control-label">@Localizer["ID usługi"]</label>
                        <input asp-for="id_service" class="form-control" />
                        <span asp-validation-for="id_service" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="date" class="control-label">@Localizer["Data"]</label>
                        <input asp-for="date" type="datetime-local" class="form-control" />
                        <span asp-validation-for="date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="status" class="control-label">@Localizer["Status"]</label>
                        <input asp-for="status" class="form-control" />
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="price" class="control-label">@Localizer["Cena"]</label>
                        <input asp-for="price" class="form-control" />
                        <span asp-validation-for="price" class="text-danger"></span>
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" value="@Localizer["Dodaj"]" class="btn btn-purple" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link text-purple">
                <i class="fas fa-arrow-left"></i>@Localizer["Wróć do listy rezerwacji"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
