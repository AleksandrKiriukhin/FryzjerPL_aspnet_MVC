@model ASP.NET_project.Models.Reservation
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-label">
                <label class=" control-label">Client id</label>
                <input asp-for="id_client" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Worker id</label>
                <input asp-for="id_worker" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Service id</label>
                <input asp-for="id_service" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Date</label>
                <input asp-for="date" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Status</label>
                <input asp-for="status" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Total price</label>
                <input asp-for="price" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>