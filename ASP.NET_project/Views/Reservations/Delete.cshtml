@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ASP.NET_project.ViewModel.ReservationViewModel

@{
    ViewData["Title"] = "Usuń rezerwację";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@Localizer["Usuń rezerwację"]</h4>
            </div>
            <div class="card-body">
                <h5>@Localizer["Czy na pewno chcesz usunąć tę rezerwację?"]</h5>
                <h4 class="mt-3">@Localizer["ID klienta"]: @Model.id_client | @Localizer["Pracownik ID"]: @Model.id_worker</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">@Localizer["ID usługi"]:</dt>
                    <dd class="col-sm-8">@Model.id_service</dd>

                    <dt class="col-sm-4">@Localizer["Data"]:</dt>
                    <dd class="col-sm-8">@Model.date.ToString("g")</dd>

                    <dt class="col-sm-4">@Localizer["Status"]:</dt>
                    <dd class="col-sm-8">@Model.status</dd>

                    <dt class="col-sm-4">@Localizer["Cena"]:</dt>
                    <dd class="col-sm-8">@Model.price zł</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-danger">@Localizer["Usuń"]</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">@Localizer["Anuluj"]</a>
                </form>
            </div>
        </div>
    </div>
</div>
