@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ASP.NET_project.ViewModel.ClientViewModel

@{
    ViewData["Title"] = "Usuń klienta";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@Localizer["Usuń klienta"]</h4>
            </div>
            <div class="card-body">
                <h5>@Localizer["Czy napewno chcesz usunąć tego klienta?"]</h5>
                <h4 class="mt-3">@Model.name @Model.surname</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.email</dd>

                    <dt class="col-sm-3">@Localizer["Telefon"]:</dt>
                    <dd class="col-sm-9">@Model.phone</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-danger">@Localizer["Usuń"]</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">@Localizer["Anuluj"]</a>
                </form>
            </div>
        </div>
    </div>
</div>
