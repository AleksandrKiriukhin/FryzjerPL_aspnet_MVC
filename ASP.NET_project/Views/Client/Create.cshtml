
@model ASP.NET_project.Models.Client
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-label">
                <label class=" control-label">First Name</label>
                <input asp-for="name" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Surname</label>
                <input asp-for="surname" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <label class=" control-label">Email</label>
                <input asp-for="email" class="control-label" class="form-control" type="email" />
            </div>
            <div class="form-label">
                <label class=" control-label">Phone Number</label>
                <input asp-for="phone" class="control-label" class="form-control" />
            </div>
            <div class="form-label">
                <input class="btn btn-primary" type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Client List", "Index")
</div>
