@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ASP.NET_project.ViewModel.ClientViewModel

@{
    ViewData["Title"] = "Dodaj klienta";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header bg-purple text-white">
                <h4 class="mb-0">@Localizer["Dodaj nowego klienta"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label asp-for="name" class="control-label">@Localizer["Imię"]</label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="surname" class="control-label">@Localizer["Nazwisko"]</label>
                        <input asp-for="surname" class="form-control" />
                        <span asp-validation-for="surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="email" class="control-label">Email</label>
                        <input asp-for="email" type="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="phone" class="control-label">@Localizer["Telefon"]</label>
                        <input asp-for="phone" class="form-control" />
                        <span asp-validation-for="phone" class="text-danger"></span>
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="@Localizer["Dodaj"]" class="btn btn-purple" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link text-purple">
                <i class="fas fa-arrow-left"></i> @Localizer["Wróć do listy klientów"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
