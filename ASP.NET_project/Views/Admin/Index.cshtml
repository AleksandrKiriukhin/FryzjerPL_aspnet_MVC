@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<ASP.NET_project.ViewModel.UserRolesViewModel>

@{
    ViewData["Title"] = "Lista użytkowników";
}

<h1 class="mb-4 text-center text-purple">@Localizer["Lista użytkowników"]</h1>

<div class="mb-4 text-center">
    <a asp-action="CreateUser" class="btn btn-purple">
        <i class="fas fa-user-plus"></i> @Localizer["Dodaj nowego użytkownika"]
    </a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Role)</th>
            <th>@Localizer["Akcje"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-purple mr-1">@Localizer["Edytuj"]</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">@Localizer["Usuń"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
