@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ASP.NET_project.ViewModel.ServiceViewModel

@{
    ViewData["Title"] = "Usuń usługę";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@Localizer["Usuwanie usługi"]</h4>
            </div>
            <div class="card-body text-center">
                <h5 class="mb-3">@Localizer["Czy na pewno chcesz usunąć tę usługę?"]</h5>
                <h4 class="text-purple font-weight-bold">@Model.name</h4>
                <hr />
                <form asp-action="Delete" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-danger mr-2">@Localizer["Usuń"]</button>
                    <a asp-action="Index" class="btn btn-secondary">@Localizer["Anuluj"]</a>
                </form>
            </div>
        </div>
    </div>
</div>
